<h1>編集する</h1>
<%= form_with(model: @instagram, local:true) do |f| %>
<% if @instagram.errors.any? %>
  <div id="error_explanation">
    <h2><%= @instagram.errors.count %>件のエラーがあります。</h2>
    　　<ul>
      　　<% @instagram.errors.full_messages.each do |msg| %>
        　　<li><%= msg %></li>
      　　<% end %>
    　　</ul>
    </div>
  <% end %>
  <div class="insta_content">
    <%= f.label:image %>
    <%= image_tag @instagram.image.url %>
    <%= f.file_field:image %>
  </div>
  <div class="insta_content">
    <%= f.label:content %>
    <%= f.text_field:content %>
  </div>
  <%= f.submit "編集する"%>
  <%= link_to "投稿一覧", instagrams_path %>
<% end %>
