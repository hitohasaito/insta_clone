<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @instagram, url: instagrams_path, local: true) do |form| %>
  <%= form.hidden_field @instagram.image.url if @instagram.image && @instagram.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <p>画像:<%= image_tag @instagram.image.url %></p>
  <p>内容:<%= @instagram.content %></p>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @instagram, url: new_instagram_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :content %>
  <%= form.submit "戻る", name:"back" %>
<% end %>
