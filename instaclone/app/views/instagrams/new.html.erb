<h1>新規投稿</h1>
<%= form_with(model: @instagram, local:true, url: choose_new_or_edit ) do |f| %>
<% if @instagram.errors.any? %>
  <div id="error_explanation">
    <h2><%= @instagram.errors.count %>件のエラーがあります。</h2>
    　　<ul>
      　　<% @instagram.errors.full_messages.each do |msg| %>
        　　<li><%= msg %></li>
      　　<% end %>
    　　</ul>
    </div>
<% end %>
  <div class = "insta_content">
    <%= f.label:image %>
    <%= image_tag(@instagram.image.url) if @instagram.image && @instagram.image.url %>
    <%= f.file_field:image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class = "insta_content">
    <%= f.label:content %>
    <%= f.text_field:content %>
  </div>
  <%= f.submit "投稿する"%>
  <%= link_to "投稿一覧へ", instagrams_path %>
<% end %>
