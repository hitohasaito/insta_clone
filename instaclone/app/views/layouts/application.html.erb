<!DOCTYPE html>
<html>
  <head>
    <title>Instaclone</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header id="header">
        <nav class="navbar navbar-default" navbar-fixed-top>
          <div class="container-fluid">
		        <div class="navbar-header">
			        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
				        <span class="sr-only"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
				        <span class="icon-bar"></span>
			        </button>
			       <a class="navbar-brand">Instaclone</a>
		        </div>
            <div class="collapse navbar-collapse" id="navbarEexample7">
              <ul class="nav navbar-nav">
                <% if logged_in? %>
                  <li><%= link_to "プロフィール", user_path(current_user.id) %></li>
                  <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
                  <p class="navbar-text navbar-right">ようこそ <a href="#" class="navbar-link"><%= current_user.name %></a> さん。</p>
                <% else %>
                  <li><%= link_to "アカウント作成", new_user_path %></li>
                  <li><%= link_to "ログイン", new_session_path %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </nav>
    </header>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= yield %>
  </body>
</html>
